{
  "name": "hyperstream",
  "version": "0.0.1",
  "description": "Decentralized secure binary streaming powered by hyperdb",
  "main": "./lib/index.js",
  "bin": "./bin/hyperstream",
  "engines": {
    "node": ">=7.6.0"
  },
  "dependencies": {
    "bclient": "0.0.2",
    "hypercore": "^6.14.0",
    "hyperdb": "^3.0.0-3",
    "hyperdiscovery": "^7.1.0",
    "minimist": "^1.2.0",
    "protocol-buffers-encodings": "^1.1.0",
    "random-access-memory": "^3.0.0"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "protocol-buffers": "^4.0.4",
    "sinon": "^6.3.4",
    "standard": "^11.0.0",
    "tape": "^4.9.0"
  },
  "scripts": {
    "lint": "standard",
    "test-unit": "cross-env NODE_PATH=lib:test tape test/unit/**/*.js",
    "test-int": "cross-env NODE_PATH=lib:test tape test/int/**/*.js",
    "test-full": "npm-run-all test-unit test-int",
    "test": "npm-run-all lint test-full",
    "protobuf": "protocol-buffers schema.proto -o lib/messages.js"
  },
  "repository": "https://github.com/xloem/hyperstream.git",
  "homepage": "https://github.com/xloem/hyperstream.git",
  "author": "Karl Semich <0xloem@gmail.com>",
  "license": "MIT"
}
